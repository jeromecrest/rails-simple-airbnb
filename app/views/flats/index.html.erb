
<div class="container">
  <div class="cards">

    <% @flats.each do |flat| %>
      <div class="card-trip">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-trip-infos">
          <div>
            <h2> <%= flat.name %> </h2>
            <p><%= flat.address %> </p>
          </div>
          <h2 class="card-trip-pricing"><%= flat.price_per_night %> â‚¬/night </h2>
        </div>
        <div class="card-trip-actions">
            <%= link_to 'More Info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat) %>
            <%= link_to 'Remove', flat_path(flat), method: :delete  %>
        </div>
      </div>
    <% end %>

  <%= link_to 'New Flat', new_flat_path %>
  </div>
</div>
